  "shortcuts": [
    {
      "name": "Fazer Login",
      "short_name": "Login",
      "description": "Acessar o sistema de onboarding",
      "url": "/login",
      "icons": [
        {
          "src": "/images/icons/login-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Meu Progresso",
      "short_name": "Progresso",
      "description": "Ver meu progresso no treinamento",
      "url": "/progress",
      "icons": [
        {
          "src": "/images/icons/progress-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Conquistas",
      "short_name": "Conquistas",
      "description": "Ver minhas conquistas e medalhas",
      "url": "/achievements",
      "icons": [
        {
          "src": "/images/icons/achievements-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+hcp",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "permissions": [
    "notifications",
    "vibrate",
    "fullscreen"
  ],
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "window_controls_overlay": {
    "title_bar_area": {
      "x": 0,
      "y": 0,
      "width": 0,
      "height": 0
    }
  }
}
